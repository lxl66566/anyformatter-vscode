{
  "name": "anyformatter-vscode",
  "displayName": "anyformatter",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lxl66566/anyformatter-vscode"
  },
  "description": "VS Code extension for formatting any file using external command",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage"
  ],
  "contributes": {
    "configuration": {
      "title": "anyformatter",
      "type": "object",
      "properties": {
        "anyformatter.notifyOnParseError": {
          "type": "boolean",
          "default": false,
          "description": "If set to true, notify you every time anyformatter fails to parse a file"
        },
        "anyformatter.path": {
          "type": "string",
          "default": "anyformatter",
          "description": "Path to the anyformatter executable."
        }
      }
    }
  },
  "scripts": {
    "p": "vsce package",
    "c": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.41.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^2.31.1",
    "typescript": "^5.5.4"
  },
  "main": "./out/extension",
  "author": "lxl66566",
  "publisher": "lxl66566",
  "license": "MIT",
  "private": false,
  "packageManager": "pnpm@9.4.0+sha512.f549b8a52c9d2b8536762f99c0722205efc5af913e77835dbccc3b0b0b2ca9e7dc8022b78062c17291c48e88749c70ce88eb5a74f1fa8c4bf5e18bb46c8bd83a"
}
